<refentry id="mdsearch.1" lang="ja">

  <refmeta>
    <refentrytitle>mdsearch</refentrytitle>
    <manvolnum>1</manvolnum>
    <refmiscinfo class="source">Samba</refmiscinfo>
    <refmiscinfo class="manual">ユーザコマンド</refmiscinfo>
