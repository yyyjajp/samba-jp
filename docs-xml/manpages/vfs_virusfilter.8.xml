<refentry id="vfs_virusfilter.8" lang="ja">

<refmeta>
	<refentrytitle>vfs_virusfilter</refentrytitle>
	<manvolnum>8</manvolnum>
	<refmiscinfo class="source">Samba</refmiscinfo>
